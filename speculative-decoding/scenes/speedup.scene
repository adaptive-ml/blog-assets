<scene>
    <a id="orbit-target" transform="pos: -0.5 0 1.5" />

    <a id="camera"
        transform
        camera="clear-color: 0xfafafa; mode: 1; size: 3.5"
        orbit="target: @orbit-target; target-distance: 8; yaw: 0.3; pitch: 1; target-yaw: 0.3; target-pitch: 1; min-pitch: 0; zoom-speed: 0; target-size: 3.5"
        fxaa
    />

    <a ambient-light="intensity: 1.3" />
    <a directional-light="intensity: 0.7" />

    <a id="target-box"
        transform="pos: 0 0 0"
        mesh="shape: 0; size: 1 1 1; color: 0x2a4a6d"
    />

    <a id="draft-box"
        transform="pos: 0 0 2"
        mesh="shape: 0; size: 1 1 1; color: 0x8b5cf6"
    />
</scene>
